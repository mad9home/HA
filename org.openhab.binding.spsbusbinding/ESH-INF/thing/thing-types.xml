<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="spsbusbinding" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="light">
		<label>Light</label>
		<description></description>
		<channels>
			<channel id="switch" typeId="switch" />
		</channels>
		<config-description>
			<parameter name="index" type="integer" required="true">
				<label>Index</label>
				<description>Index</description>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="rollershutter">
		<label>Rollershutter</label>
		<description></description>
		<channels>
			<channel id="rollershutter" typeId="rollershutter" />
		</channels>
		<config-description>
			<parameter name="index" type="integer" required="true">
				<label>Index</label>
				<description>Index</description>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="temperature">
		<label>Temperature</label>
		<description></description>
		<channels>
			<channel id="sensor" typeId="sensor" />
		</channels>
		<config-description>
			<parameter name="index" type="integer" required="true">
				<label>Index</label>
				<description>Index</description>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="thermostat">
		<label>Thermostat</label>
		<description></description>
		<channels>
			<channel id="setpoint" typeId="setpoint" />
		</channels>
		<config-description>
			<parameter name="index" type="integer" required="true">
				<label>Index</label>
				<description>Index</description>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="outlet">
		<label>Outlet</label>
		<description></description>
		<channels>
			<channel id="outlet" typeId="outlet" />
		</channels>
		<config-description>
			<parameter name="index" type="integer" required="true">
				<label>Index</label>
				<description>Index</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>On/Off</label>
		<description></description>
	</channel-type>

	<channel-type id="rollershutter">
		<item-type>Rollershutter</item-type>
		<label>Rollershutter</label>
		<description></description>
	</channel-type>

	<channel-type id="sensor">
		<item-type>Number</item-type>
		<label>Sensor</label>
		<description></description>
		<state readOnly="true" />
	</channel-type>

	<channel-type id="setpoint">
		<item-type>Number</item-type>
		<label>Setpoint</label>
		<description></description>
	</channel-type>

	<channel-type id="outlet">
		<item-type>Switch</item-type>
		<label>Power Outlet</label>
		<description></description>
	</channel-type>

</thing:thing-descriptions>
