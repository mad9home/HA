<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="spsbusbinding"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <thing-type id="spsbusbindingthing">
        <label>SPSBus Binding Thing</label>
        <description></description>

        <channels>
            <channel id="switch_light" typeId="switch_light" />
            <channel id="rollershutter" typeId="rollershutter" />
            <channel id="sensor_temperature" typeId="sensor_temperature" />
            <channel id="thermostat_setpoint" typeId="thermostat_setpoint" />
            <channel id="outlet" typeId="outlet" />
        </channels>
    </thing-type>

    <channel-type id="switch_light">
        <item-type>Switch</item-type>
        <label>On/Off</label>
        <description></description>
        <config-description>
            <parameter name="index" type="integer">
                <label>Index</label>
                <description>Index</description>
                <required>true</required>
            </parameter>
        </config-description>
    </channel-type>

    <channel-type id="rollershutter">
        <item-type>Rollershutter</item-type>
        <label>Rollershutter</label>
        <description></description>
        <config-description>
            <parameter name="index" type="integer">
                <label>Index</label>
                <description>Index</description>
                <required>true</required>
            </parameter>
        </config-description>
    </channel-type>

    <channel-type id="sensor_temperature">
        <item-type>Number</item-type>
        <label>Temperature Sensor</label>
        <description></description>
        <state readOnly="true" />
        <config-description>
            <parameter name="index" type="integer">
                <label>Index</label>
                <description>Index</description>
                <required>true</required>
            </parameter>
        </config-description>
    </channel-type>

    <channel-type id="thermostat_setpoint">
        <item-type>Number</item-type>
        <label>Temperature Setpoint</label>
        <description></description>
        <config-description>
            <parameter name="index" type="integer">
                <label>Index</label>
                <description>Index</description>
                <required>true</required>
            </parameter>
        </config-description>
    </channel-type>

    <channel-type id="outlet">
        <item-type>Switch</item-type>
        <label>Power Outlet</label>
        <description></description>
        <config-description>
            <parameter name="index" type="integer">
                <label>Index</label>
                <description>Index</description>
                <required>true</required>
            </parameter>
        </config-description>
    </channel-type>

</thing:thing-descriptions>
